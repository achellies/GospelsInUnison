<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<TextView android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:id="@+id/txtTitle"
		android:gravity="top|center_horizontal" />

	<TextView android:layout_height="fill_parent"
		android:layout_width="fill_parent" android:id="@+id/txtContent"
		android:layout_weight="1" />

	<LinearLayout android:orientation="horizontal" android:id="@+id/btmLinearLayout"
	    android:background="@android:drawable/bottom_bar" android:paddingLeft="4.0dip"
	    android:paddingTop="5.0dip" android:paddingRight="4.0dip"
	    android:paddingBottom="1.0dip" android:layout_width="fill_parent"
	    android:layout_height="wrap_content" android:layout_below="@+id/txtContent">
	    
	    <Button android:id="@+id/btnMenu" android:layout_width="0.0dip"
	        android:layout_height="fill_parent" android:text="Menu"
	        android:layout_weight="1.0" />
	    <Button android:id="@+id/btnExit" android:layout_width="0.0dip"
	        android:layout_height="fill_parent" android:text="Exit"
	        android:layout_weight="1.0" />
	
	</LinearLayout>
</LinearLayout>
